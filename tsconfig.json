{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": false,
    "lib": [
      "esnext"
    ],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@hzzlyxx/*": ["packages/*"]
    },
  },
  "exclude": [
    "node_modules",
  ]
}

