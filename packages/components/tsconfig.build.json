{
  "compilerOptions": {
    "outDir": "es",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/test.tsx",
    "src/**/demo.tsx",
    "**/*.md",
  ]
}